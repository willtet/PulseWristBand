<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Menu">

    <Button
        android:id="@+id/b_escrever"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginBottom="293dp"
        android:text="Escrever"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_ler" />

    <Button
        android:id="@+id/b_connect"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:text="Conectar"
        app:layout_constraintBottom_toTopOf="@+id/b_ler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connection" />

    <TextView
        android:id="@+id/connection"
        android:layout_width="216dp"
        android:layout_height="0dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="411dp"
        android:autoText="false"
        android:text="Not connected"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_ler"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Ler"
        app:layout_constraintBottom_toTopOf="@+id/b_escrever"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_connect" />

    <TextView
        android:id="@+id/test"
        android:layout_width="249dp"
        android:layout_height="0dp"
        android:layout_marginBottom="114dp"
        android:text="A colocar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connection" />
</androidx.constraintlayout.widget.ConstraintLayout>